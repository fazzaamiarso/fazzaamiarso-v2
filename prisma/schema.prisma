// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  slug  String @unique
  views Int    @default(1)
  likes Like[]
}

model Like {
  id       String  @id @default(uuid())
  userIp   String
  Post     Post?   @relation(fields: [postSlug], references: [slug])
  postSlug String?

  @@index([postSlug])
}
