<article
  class='blog prose prose-zinc col-span-3 prose-headings:scroll-mt-20 prose-code:font-code dark:prose-invert max-lg:col-span-4 md:prose-lg'>
  <slot />
</article>

<style is:global lang='scss'>
  .blog {
    p {
      @apply dark:text-zinc-300;
    }

    a {
      @apply break-all  transition-all;
    }

    a:not(.notes a, .heading-group a) {
      @apply text-primaryDarker dark:text-primary;
      text-decoration: none;
      background-image: linear-gradient(#8761ff, #8761ff);
      background-repeat: no-repeat;
      background-position: left bottom;
      background-size: 0% 2px;
      &:hover {
        background-size: 100% 2px;
      }
    }

    img {
      @apply mx-auto rounded-md;
    }

    code {
      counter-reset: step;
      counter-increment: step 0;
      & .line::before {
        @apply text-zinc-400;
        content: counter(step);
        counter-increment: step;
        margin-right: 1.25rem;
      }
      &::after,
      &::before {
        content: "";
      }
    }

    pre {
      .blog :not(&) code {
        @apply rounded-sm bg-gray-200 px-1 py-[6px] transition-colors dark:bg-[#20272f] max-sm:text-[.75rem];
      }
      code {
        font-size: 0.9rem;
      }
      &::-webkit-scrollbar {
        @apply h-[6px] rounded-b-md bg-gray-900;
      }
      &::-webkit-scrollbar-thumb {
        @apply my-1 rounded-full bg-zinc-500;
      }
    }
    .heading-group {
      position: relative;

      &::before {
        position: absolute;
        content: "#";
        height: 100%;
        width: 50px;
        transform: scale(1.5);
        left: -1rem;
        opacity: 0;
        transition: all 100ms ease-in-out;
      }

      &:hover::before {
        opacity: 1;
      }

      a {
        background: none;
        content: "";
        position: absolute;
        inset: 0;
        &:hover{
          background: none;
        }
      }
    }
  }
</style>
