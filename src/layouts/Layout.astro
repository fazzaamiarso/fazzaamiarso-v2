---
import "@fontsource/inter";
import "@fontsource/inter/variable.css";
import "@fontsource/league-mono";

import Footer from "components/Footer.astro";
import Navbar from "components/header/Navbar.astro";
import SEO from "components/SEO.astro";

export interface Props {
  title: string;
  desc?: string;
}

const { title, desc } = Astro.props;


---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <SEO title={title} desc={desc} />
    <!--  -->
  </head>
  <body class='font-inter bg-[#f9fbfa]'>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      :root {
        --color-gray-100: #f7f7f7;
        --color-gray-200: #e6e9ee;
        --color-gray-300: #dde0e4;
        --color-gray-400: #818890;
        --color-gray-500: #535661;
        --color-gray-600: #4b4c53;
        --color-gray-700: #3a3d4a;
        --color-gray-800: #2e3039;
        --color-gray-900: #1f2028;
      }

      html {
        @apply scroll-smooth;
      }

      .layout {
        @apply mx-auto w-11/12 max-w-5xl;
      }

      .link-card {
        @apply before:absolute before:inset-0 before:z-10;
      }
    </style>
  </body>
</html>
