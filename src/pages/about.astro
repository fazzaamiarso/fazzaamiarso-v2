---
import Layout from "layouts/Layout.astro";
import { Icon } from "astro-icon";
---

<Layout title='About | Fazza Razaq Amiarso'>
  <main class='layout space-y-6 py-12'>
    <div>
      <h1 class='text-2xl font-bold'>
        About <div
          class='bg-gradient-to-tr from-green-300 via-blue-500 to-purple-600 bg-clip-text text-4xl text-transparent'>
          Fazza Razaq Amiarso
        </div>
      </h1>
      <p>Web Developer, Writer, & Open-source contributor</p>
    </div>

    <div class='space-y-4'>
      <h2>Want to chat/collaborate? Reach me out here!</h2>
      <ul class='flex items-center gap-6'>
        <li>
          <a
            href='https://www.linkedin.com/in/fazzaamiarso'
            target='_blank'
            referrerpolicy='strict-origin-when-cross-origin'
            class="external"
            ><Icon name='simple-icons:linkedin' class='w-6' />
          </a>
        </li>
        <li>
          <a
            href='https://github.com/fazzaamiarso'
            target='_blank'
            referrerpolicy='strict-origin-when-cross-origin'
            class="external"
            ><Icon name='simple-icons:github' class='w-6' />
          </a>
        </li>
        <li>
          <a href='https://twitter.com/faz_razq' target='_blank' referrerpolicy='strict-origin-when-cross-origin'
          class="external"
            ><Icon name='simple-icons:twitter' class='w-6' />
          </a>
        </li>
      </ul>
    </div>
  </main>
</Layout>

